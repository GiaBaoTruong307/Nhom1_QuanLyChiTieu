<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tiêu đề -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cập nhật tiến độ"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="24dp"
                android:textColor="@android:color/black" />

            <!-- Tên mục tiêu (chỉ hiển thị) -->
            <TextView
                android:id="@+id/tvGoalName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mua xe"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/black" />

            <!-- Số tiền mục tiêu (chỉ hiển thị) -->
            <TextView
                android:id="@+id/tvTargetAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mục tiêu: 500.000.000 VND"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:textColor="#333333" />

            <!-- Số tiền hiện tại (chỉ hiển thị) -->
            <TextView
                android:id="@+id/tvCurrentAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hiện tại: 100.000.000 VND"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:textColor="#333333" />

            <!-- Số tiền cập nhật -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp">

                <EditText
                    android:id="@+id/editTextUpdateAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Số tiền hiện có"
                    android:textStyle="bold"
                    android:inputType="number"
                    android:padding="12dp"
                    android:background="@drawable/lapkehoach_edit_text_border" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VND"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="12dp"
                    android:textColor="@android:color/black" />
            </RelativeLayout>

            <!-- Nút HỦY và CẬP NHẬT -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/buttonCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HỦY"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF0000"
                    android:padding="12dp"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/buttonUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CẬP NHẬT"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#3333FF"
                    android:padding="12dp"
                    android:layout_marginStart="8dp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>