<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.LapKeHoach.LapKeHoach">

    <!-- Header Layout -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="start">
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:tint="@color/white" />
    </LinearLayout>

    <!-- Main content with scrolling -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Account Summary Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/account_summary_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="70dp"
                app:cardBackgroundColor="#2A2A2A"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/account_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tài khoản của tôi"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- Total Savings Section -->
                    <TextView
                        android:id="@+id/savings_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Tổng tiết kiệm"
                        android:textColor="@color/white"
                        android:textSize="18sp" />

                    <ProgressBar
                        android:id="@+id/savings_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:progress="85"
                        android:progressDrawable="@drawable/income_progress_drawable" />

                    <TextView
                        android:id="@+id/savings_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="+60,000,000 VND"
                        android:textColor="#FF4081"
                        android:textSize="14sp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Goals Section Title -->
            <TextView
                android:id="@+id/goals_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Mục tiêu đặt ra"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/title_underline"
                android:layout_width="120dp"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:background="@color/white" />

            <!-- Goal 1: Buy a car -->
            <LinearLayout
                android:id="@+id/goal_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/goal_icon_1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/car"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/goal_name_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mua xe"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/goal_progress_1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:progress="20"
                        android:progressDrawable="@drawable/goal_progress_drawable" />

                    <TextView
                        android:id="@+id/goal_amount_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="500,000,000VND"
                        android:textColor="#8BC34A"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Goal 2: Travel -->
            <LinearLayout
                android:id="@+id/goal_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/goal_icon_2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/travel"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/goal_name_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Du lịch"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/goal_progress_2"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:progress="100"
                        android:progressDrawable="@drawable/goal_progress_drawable">
                    </ProgressBar>

                    <TextView
                        android:id="@+id/goal_amount_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="50,000,000VND"
                        android:textColor="#8BC34A"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/goal_completed_2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"
                    app:tint="#8BC34A" />
            </LinearLayout>

            <!-- Goal 3: Buy a house -->
            <LinearLayout
                android:id="@+id/goal_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/goal_icon_3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/house"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/goal_name_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mua nhà"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/goal_progress_3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:progress="10"
                        android:progressDrawable="@drawable/goal_progress_drawable" />

                    <TextView
                        android:id="@+id/goal_amount_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="6,000,000,000VND"
                        android:textColor="#8BC34A"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Goal 4: Buy a phone -->
            <LinearLayout
                android:id="@+id/goal_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/goal_icon_4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/phone"
                    app:civ_border_color="#FFFFFF"
                    app:civ_border_width="1dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/goal_name_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mua điện thoại"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <ProgressBar
                        android:id="@+id/goal_progress_4"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginTop="8dp"
                        android:progress="100"
                        android:progressDrawable="@drawable/goal_progress_drawable" />

                    <TextView
                        android:id="@+id/goal_amount_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="20,000,000VND"
                        android:textColor="#8BC34A"
                        android:textSize="14sp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/goal_completed_4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_check"
                    app:tint="#8BC34A" />
            </LinearLayout>

            <!-- Add New Goal Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_goal"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="32dp"
                android:text=" + Thêm mới mục tiêu"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:iconGravity="textStart"
                app:iconTint="@color/white"
                app:cornerRadius="8dp"
                android:backgroundTint="#3F51B5" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
