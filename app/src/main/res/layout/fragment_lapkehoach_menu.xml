<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="#3D3D5C"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_gravity="center">

        <!-- Sửa mục tiêu -->
        <LinearLayout
            android:id="@+id/layoutEditGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lapkehoach_ic_edit"
                android:contentDescription="Edit icon"
                app:tint="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa mục tiêu"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Xóa mục tiêu -->
        <LinearLayout
            android:id="@+id/layoutDeleteGoal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/lapkehoach_ic_delete"
                android:contentDescription="Delete icon"
                app:tint="#FF5252" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xóa mục tiêu"
                android:textColor="#FF5252"
                android:textSize="16sp"
                android:layout_marginStart="12dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>